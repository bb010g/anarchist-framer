{
  "manifest_version": 2,
  "name": "Anarchist Framer",
  "developer": {
    "name": "bb010g",
    "url": "https://bb010g.keybase.pub/"
  },
  "homepage_url": "https://github.com/bb010g/anarchist-framer",
  "version": "1.0",
  "icons": {
    "48": "icon.svg",
    "96": "icon.svg"
  },

  "description": "Strip X-Frame-Options headers from frames loaded on whitelisted pages.",
  "options_ui": {
    "page": "options.html",
    "browser_style": true,
    "chrome_style": true
  },

  "permissions": [
    "<all_urls>",
    "storage",
    "webRequest",
    "webRequestBlocking"
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "applications": {
    "gecko": {
      "id": "anarchist-framer@bb010g.com",
      "strict_min_version": "57.0a1"
    }
  }
}
